{
	"extends": "astro/tsconfigs/strict",
	"include": [
		".astro/types.d.ts",
		"src/**/*"
		// "**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	],
	"compilerOptions": {
		"jsx"				:	"react-jsx",

		"jsxImportSource"	:	"react",

		"baseUrl"			:	"src",
		// "baseUrl"		:	".",

		"paths": {
			"@/*"			:	["./src/*"],

			"@global/*"		:	["global/*"],

			"@assets/*"		:	["assets/*"],

			"@images/*"		:	["assets/images/*"],

			"@icons/*"		:	["assets/icons/*"],

			"@components/*"	:	["components/*"],

			"@sections/*"	:	["components/sections/*"],

			"@partials/*"	:	["components/partials/*"],

			"@ui/*"			:	["components/ui/*"],

			"@widgets/*"	:	["components/widgets/*"],

			"@containers/*"	:	["containers/*"],

			"@content/*"	:	["content/*"],

			"@data/*"		:	["data/*"],

			"@layouts/*"	:	["layouts/*"],

			"@lib/*"		:	["lib/*"],

			"@pages/*"		:	["pages/*"],

			"@scripts/*"	:	["scripts/*"],

			"@styles/*"		:	["styles/*"],

			"@utils/*"		:	["utils/*"],

		}
	}
}